extends layout

block title
  title Error

block description
  meta(name='description', content='Errored')

block extralinks
  link(rel="stylesheet", href="/stylesheets/error.css")

block extrascripts

block content
  .cover
    .container
      .row
        .col-md-6.col-md-offset-3
          .infoCard
            .infoSubheadline
              p
                | Let's go back to
                | the
                a(href="/")  homepage
            .infoBody
              .infoHeadline
                if error.status
                  h1 #{error.status}: #{error.message}
                else
                  h1 Whoops!
                h2
                //-p If this is not what you expected, let us know
                  a(href="/feedback") here
                  |.
              if error.stack !== ''
                pre #{error.stack}